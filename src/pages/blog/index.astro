---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BaseLayout
  title="Peptide Research Blog â€” Guides, Protocols & Education | PepTalk Peptides"
  description="In-depth peptide research guides covering reconstitution, dosing, stacking, storage, and comparison articles. Free education for peptide researchers."
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <div class="text-center mb-10">
      <h1 class="text-3xl sm:text-4xl font-extrabold gradient-text mb-3">Research Blog</h1>
      <p class="text-gray-300 text-sm max-w-lg mx-auto">In-depth guides, protocols, and comparisons to support your peptide research.</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
      {posts.map(post => (
        <a href={`/blog/${post.slug}`} class="glass card-hover rounded-2xl p-6 group block">
          <div class="flex items-center gap-2 text-[10px] text-gray-400 mb-3 uppercase tracking-wider">
            <time datetime={post.data.date}>{new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
            <span>&middot;</span>
            <span>{post.data.readTime || '8 min read'}</span>
          </div>
          <h2 class="text-lg font-bold text-gray-100 group-hover:text-white transition-colors mb-2 leading-snug">{post.data.title}</h2>
          <p class="text-gray-300 text-sm leading-relaxed line-clamp-3">{post.data.description}</p>
          {post.data.tags && (
            <div class="flex flex-wrap gap-1.5 mt-3">
              {post.data.tags.map((tag: string) => (
                <span class="text-[9px] px-2 py-0.5 rounded-full bg-white/5 border border-white/10 text-gray-400 uppercase tracking-wider">{tag}</span>
              ))}
            </div>
          )}
        </a>
      ))}
    </div>
  </section>
</BaseLayout>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const categories = ['All', ...new Set(posts.map(p => p.data.category).filter(Boolean))];
---

<BaseLayout
  title="Peptide Research Blog â€” Guides, Protocols & Education | PepTalk Peptides"
  description="In-depth peptide research guides covering reconstitution, dosing, stacking, storage, and comparison articles. Free education for peptide researchers."
>
  <section class="max-w-5xl mx-auto px-4 py-12">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl sm:text-4xl font-extrabold gradient-text mb-3">Research Blog</h1>
      <p class="text-gray-300 text-sm max-w-lg mx-auto">In-depth guides, protocols, and comparisons to support your peptide research.</p>
    </div>

    <!-- Search -->
    <div class="max-w-xl mx-auto mb-8">
      <div class="relative">
        <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <input
          type="text"
          id="blog-search"
          placeholder="Search articles, peptides, topics..."
          class="input-glass w-full pl-11 pr-4 py-3 rounded-xl text-sm text-gray-100 placeholder-gray-500"
        />
      </div>
    </div>

    <!-- Category Navigation -->
    <div class="flex flex-wrap justify-center gap-2 mb-10" id="category-nav">
      {categories.map(cat => (
        <button
          data-category={cat}
          class:list={[
            'px-4 py-2 rounded-full text-xs font-semibold tracking-wide transition-all duration-200 cursor-pointer',
            cat === 'All'
              ? 'pill-active text-white'
              : 'pill-track text-gray-300 hover:text-white hover:border-white/30'
          ]}
        >
          {cat}
        </button>
      ))}
    </div>

    <!-- No Results -->
    <div id="no-results" class="hidden text-center py-16">
      <p class="text-gray-400 text-lg mb-2">No articles found</p>
      <p class="text-gray-500 text-sm">Try a different search term or category.</p>
    </div>

    <!-- Blog Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" id="blog-grid">
      {posts.map(post => (
        <a
          href={`/blog/${post.slug}`}
          class="blog-card glass card-hover rounded-2xl overflow-hidden group block"
          data-title={post.data.title.toLowerCase()}
          data-description={post.data.description.toLowerCase()}
          data-tags={(post.data.tags || []).join(' ').toLowerCase()}
          data-category={post.data.category || ''}
        >
          {post.data.heroImage && (
            <div class="relative h-44 overflow-hidden">
              <img
                src={post.data.heroImage}
                alt={post.data.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
              {post.data.category && (
                <span class="absolute top-3 left-3 text-[10px] font-bold uppercase tracking-wider px-2.5 py-1 rounded-full bg-black/60 backdrop-blur-sm text-white border border-white/10">
                  {post.data.category}
                </span>
              )}
            </div>
          )}
          <div class="p-5">
            <div class="flex items-center gap-2 text-[10px] text-gray-400 mb-2.5 uppercase tracking-wider">
              <time datetime={post.data.date}>{new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</time>
              <span>&middot;</span>
              <span>{post.data.readTime || '8 min read'}</span>
            </div>
            <h2 class="text-base font-bold text-gray-100 group-hover:text-white transition-colors mb-2 leading-snug line-clamp-2">{post.data.title}</h2>
            <p class="text-gray-400 text-sm leading-relaxed line-clamp-2">{post.data.description}</p>
            <span class="inline-block mt-3 text-xs font-semibold text-purple-400 group-hover:text-purple-300 transition-colors">
              Read more &rarr;
            </span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <script>
    document.addEventListener('astro:page-load', () => {
      const searchInput = document.getElementById('blog-search') as HTMLInputElement;
      const categoryNav = document.getElementById('category-nav');
      const noResults = document.getElementById('no-results');
      const cards = Array.from(document.querySelectorAll('.blog-card')) as HTMLElement[];
      const categoryBtns = Array.from(categoryNav?.querySelectorAll('button') || []) as HTMLElement[];
      if (!searchInput) return;

      let activeCategory = 'All';

      function filterCards() {
        const query = searchInput?.value.toLowerCase().trim() || '';
        let visible = 0;

        cards.forEach(card => {
          const title = card.dataset.title || '';
          const desc = card.dataset.description || '';
          const tags = card.dataset.tags || '';
          const cat = card.dataset.category || '';

          const matchesSearch = !query || title.includes(query) || desc.includes(query) || tags.includes(query);
          const matchesCategory = activeCategory === 'All' || cat === activeCategory;

          if (matchesSearch && matchesCategory) {
            card.style.display = '';
            visible++;
          } else {
            card.style.display = 'none';
          }
        });

        if (noResults) {
          noResults.style.display = visible === 0 ? '' : 'none';
          noResults.classList.toggle('hidden', visible > 0);
        }
      }

      searchInput.addEventListener('input', filterCards);

      categoryBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          activeCategory = btn.dataset.category || 'All';
          categoryBtns.forEach(b => {
            if (b.dataset.category === activeCategory) {
              b.className = 'px-4 py-2 rounded-full text-xs font-semibold tracking-wide transition-all duration-200 cursor-pointer pill-active text-white';
            } else {
              b.className = 'px-4 py-2 rounded-full text-xs font-semibold tracking-wide transition-all duration-200 cursor-pointer pill-track text-gray-300 hover:text-white hover:border-white/30';
            }
          });
          filterCards();
        });
      });
    });
  </script>
</BaseLayout>
